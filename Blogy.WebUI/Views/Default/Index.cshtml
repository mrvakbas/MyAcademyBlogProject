@model List<ResultBlogDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Start retroy layout blog posts -->
<section class="section bg-light">
	<div class="container">
		<div class="row align-items-stretch retro-layout">

			@foreach (var item in Model)
			{
				<div class="col-md-4">


					<a href="/Blog/BlogDetails/@item.Id" class="h-entry mb-30 v-height gradient">

						<div class="featured-img" style="background-image: url('@item.CoverImage');"></div>

						<div class="text">
							<span class="date">@item.CreatedDate</span>
							<h2>@item.Title</h2>
						</div>
					</a>

					@* <a href="single.html" class="h-entry v-height gradient">

						<div class="featured-img" style="background-image: url('/blogy-1.0.0/images/img_5_horizontal.jpg');"></div>

						<div class="text">
							<span class="date">Apr. 14th, 2022</span>
							<h2>Don’t assume your user data in the cloud is safe</h2>
						</div>
					</a> *@
				</div>
			}
		</div>
	</div>
</section>
<!-- End retroy layout blog posts -->
@await Component.InvokeAsync("_DefaultBlogsComponent")