@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
	<div class="container">
		<div class="row align-items-center justify-content-center text-center pt-3">
			<div class="col-lg-6">
				<h1 class="heading text-white mb-3" data-aos="fade-up">İletişim</h1>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
				<div class="contact-info">

					<div class="address mt-5">
						<i class="icon-room"></i>
						<h4 class="mb-2">Adres :</h4>
						<p>Üsküdar / İSTANBUL</p>
					</div>

					<div class="email mt-4">
						<i class="icon-envelope"></i>
						<h4 class="mb-2">Email:</h4>
						<p>info@blogy.com</p>
					</div>

					<div class="phone mt-4">
						<i class="icon-phone"></i>
						<h4 class="mb-2">Call:</h4>
						<p>0555 555 55 55</p>
					</div>

				</div>
			</div>
			<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
				@await Html.PartialAsync("CreateContact")
			</div>
		</div>
	</div>
</div> <!-- /.untree_co-section -->