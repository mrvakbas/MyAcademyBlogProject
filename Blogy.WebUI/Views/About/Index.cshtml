@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
}


<div class="hero overlay inner-page bg-primary py-5">
	<div class="container">
		<div class="row align-items-center justify-content-center text-center pt-3">
			<div class="col-lg-6">
				<h1 class="heading text-white mb-3" data-aos="fade-up">Hakkımızda</h1>
			</div>
		</div>
	</div>
</div>

<div class="section sec-halfs py-0">
	<div class="container">
		@foreach (var item in Model)
		{

			<div class="half-content d-lg-flex align-items-stretch">
				<div class="img order-md-2" style="background-image: url('@item.ImageUrl')" data-aos="fade-in">
				</div>
				<div class="text">
					<h2 class="heading text-primary mb-3">@item.Title</h2>
					<p class="mb-4">
						@item.Description
					</p>
					<p><a href="/Blog/Index/" class="btn btn-outline-primary py-2">Bloglara Göz Atın</a></p>
				</div>
			</div>

		}
	</div>

</div>