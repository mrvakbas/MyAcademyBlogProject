@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}

<div class="pagetitle">
	<h3>Mesajlar</h3>
</div>
@{
	int count = 0;
}

<table class="table table-bordered table-hover">
	<tr>
		<th>#</th>
		<th>Ad Soyad</th>
		<th>Mail Adresi</th>
		<th>Resim Konu</th>
		<th>Mesaj</th>
		<th>İşlemler</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.NameSurname</td>
			<td>@item.Email</td>
			<td>@item.Subject</td>
			<td>@item.Message</td>
			<td>
				<a href="/Admin/Contact/DeleteContact/@item.Id" class="btn btn-outline-danger">Sil</a>
				<a href="/Admin/Contact/UpdateContact/@item.Id" class="btn btn-outline-info">Güncelle</a>
			</td>
		</tr>
	}
</table>
<a href="/Admin/Contact/CreateContact" class="btn btn-outline-primary">Yeni Mesaj Oluştur</a>