@model EditProfileDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}

<div class="pagetitle">
	<h3>Profile Bilgileri Güncelleme Sayfası</h3>
</div>

<div class="card text-center">
	<div class="card-title">
		<h4>Profil Resmi</h4>
	</div>
	<div class="card-body">
		<img src="@Model.ImageUrl" style="height:100px; width:100px;" alt="Profil Resmi" />
	</div>
</div>

<form method="post" enctype="multipart/form-data">
	<div class="row">

		<div class="col-6">
			<label>Profil Resmi Seçin</label>
			<input type="file" asp-for="ImageFile" class="form-control" />
			<br />
			<label>Ad</label>
			<input type="text" asp-for="FirstName" class="form-control" required />
			<br />
			<label>Soyad</label>
			<input type="text" asp-for="LastName" class="form-control" required />
			<br />
			<label>Kullanıcı Adı</label>
			<input type="text" asp-for="UserName" class="form-control" required />
			<br />
		</div>

		<div class="col-6">
			<label>Email</label>
			<input type="email" asp-for="Email" class="form-control" required />
			<br />
			<label>Unvan</label>
			<input type="text" asp-for="Title" class="form-control" />
			<br />
			<label>Telefon</label>
			<input type="text" asp-for="PhoneNumber" class="form-control" />
			<br />
			<input type="hidden" asp-for="ImageUrl" />
		</div>

		<div class="col-6">
			<label>Bilgileri Güncellemek İçin Mevcut Şifrenizi Girin</label>
			<input type="password" asp-for="CurrentPassword" class="form-control" required />
		</div>
		<br />
		<span class="text-danger">@Html.ValidationSummary()</span>
		<button class="btn btn-outline-dark">Bilgileri Güncelle</button>

	</div>
</form>