@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}

<div class="pagetitle">
	<h3>Hakkımızda</h3>
</div>
@{
	int count = 0;
}
<h2>Hakkımda Yazısı Oluştur</h2>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}

<form asp-action="GenerateAbout" method="post">
    <div class="mb-3">
        <label>Prompt:</label>
        <input type="text" name="prompt" class="form-control" placeholder="Hakkımda yazısı için bir konu girin..." />
    </div>

    <button type="submit" class="btn btn-success mb-3">Oluştur</button>
</form>

@if (ViewData["GeneratedText"] != null)
{
    <div class="mb-3">
        <label>Oluşturulan Yazı:</label>
        <textarea class="form-control" rows="10">@ViewData["GeneratedText"]</textarea>
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" alt="@item.Title" style="width:100px;" /></td>
                    <td>
                        <a asp-action="UpdateAbout" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="DeleteAbout" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>