@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}

<div class="pagetitle">
	<h3>Bloglar</h3>
</div><!-- End Page Title -->
@{
	int count = 0;
}

<table class="table table-bordered table-hover">
	<tr>
		<th>#</th>
		<th>Blog Başlığı</th>
		<th>Açıklama</th>
		<th>Kategori</th>
		<th>İşlemler</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td> <img src="@item.CoverImage" style="height:75px; width:75px" />@item.Title</td>
			<td>@(item.Description.Length > 100 ? item.Description.Substring(0,100)+ "..." : item.Description)</td>
			<td>@item.Category.CategoryName</td>
			<td>
				<a href="/Admin/Blog/DeleteBlog/@item.Id" onclick="return confirm('Bu öğeyi kalıcı olarak silmek istediğinizden emin misiniz?')" class="btn btn-outline-danger">Sil</a>
				<a href="/Admin/Blog/UpdateBlog/@item.Id" class="btn btn-outline-info">Güncelle</a>
			</td>
		</tr>
	}
</table>
<a href="/Admin/Blog/CreateBlog/" class="btn btn-outline-primary">Yeni Blog Oluştur</a>