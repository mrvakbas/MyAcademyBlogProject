@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/Default/Index.cshtml";
}

<div class="pagetitle">
	<h3>Yorumlar</h3>
</div>

@{
	int count = 0;
}

<table class="table table-bordered table-hover">
	<tr>
		<th>#</th>
		<th>Blog Id</th>
		<th>Yorum İçeriği</th>
		<th>Yorum Durumu</th>
		<th>İşlemler</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.Blog.Title</td>
			<td>@item.Content</td>
			<td>@item.CommentStatus</td>
			<td>
				<a href="/Writer/Comment/DeleteComment/@item.Id" class="btn btn-outline-danger">Sil</a>
				<a href="/Writer/Comment/UpdateComment/@item.Id" class="btn btn-outline-info">Güncelle</a>
			</td>
		</tr>
	}
</table>
<a href="/Writer/Comment/CreateComment" class="btn btn-outline-primary">Yeni Yorum Oluştur</a>